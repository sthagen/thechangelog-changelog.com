.content h3 a:hover,
.content h4 a:hover {
  color: <%= news_colors("green") %>;
}
.content h1 {
  font-family: <%= news_fonts("sans") %>;
  font-size: 26px;
  font-weight: 800;
  line-height: 1.4;
  margin: 30px 0 15px 0;
}
.content h2 {
  font-size: 22px;
  font-weight: 800;
  line-height: 1.4;
  margin: 50px 0 20px 0;
}
.content h3 {
  font-size: 18px;
  font-weight: 700;
  line-height: 1.4;
  margin: 40px 0 20px 0;
}
.content h4 {
  font-family: <%= news_fonts("mono") %>;
  font-size: 14px;
  font-weight: normal;
  line-height: 1.2;
  margin: -10px 0 20px 0;
}
.content h5 {
  font-family: <%= news_fonts("mono") %>;
  font-size: 14px;
  font-weight: normal;
  line-height: 1.2;
  margin: 0 0 65px 0;
}
.content a {
  font-weight: bold;
  color: <%= news_colors("green") %>;
  text-decoration: underline;
}
.content a:hover {
