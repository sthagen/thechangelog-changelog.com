}
.content ul {
  padding-left: 20px;
}
.content ol {
  padding-left: 25px;
}
.content li {
  margin: 10px 0;
}
.content code,
.content pre {
  margin: 0;
  padding: 0;
}
.content pre {
  display: block;
  width: 100%;
  margin: 0 0 20px 0;
}
.content pre code {
  display: block;
}
.content code {
  display: inline-block;
  background-color: #202020;
  color: #f0f0f0;
  font-family: <%= news_fonts("mono") %>;
  font-size: 15px;
  padding: 15px;
}

@media (max-width: 700px) {
  table {
    width: 100%;
  }
}
.header a {
  color: <%= news_colors("dark-gray") %>;
  text-decoration: none;
}
.header a:hover {
  color: <%= news_colors("green") %>;
  text-decoration: underline;
}
.header p {
  font-size: 12px;
  line-height: 1.5;
  margin: 15px 0;
}

.footer a {
  color: <%= news_colors("dark-gray") %>;
}
.footer a:hover {
  color: <%= news_colors("green") %>;
}
.footer p {
  font-size: 13px;
  line-height: 1.5;
  margin: 0 0 20px 0;
  padding: 0 40px;
}

.spacer-10 {
  display: block;
  height: 10px;
  width: 1px;
}

.spacer-15 {
  display: block;
  height: 15px;
  width: 1px;
}

.spacer-20 {
  display: block;
  height: 20px;
  width: 1px;
}

@media (prefers-color-scheme: dark) {
  body {
    color: <%= news_colors("off-white") %>!important;
    background-color: <%= news_colors("black") %> !important;
  }
  .content h1,
  .content h2,
  .content h3,
  .content h4 {
    color: <%= news_colors("off-white") %>;
  }
  .content h1 a,
  .content h2 a,
  .content h3 a,
  .content h4 a {
    color: <%= news_colors("off-white") %>;
  }
  .content h1 a:hover,
  .content h2 a:hover,
  .content h3 a:hover,
  .content h4 a:hover {
    color: <%= news_colors("green") %>;
  }
  .content a:hover {
    color: <%= news_colors("off-white") %>;
  }
  .content p code,
  .content li code {
    background-color: #333333;
    border: 1px solid #212121;
  }
  .footer,
  .header {
    color: <%= news_colors("off-white") %>;
  }
  .footer a,
  .header a {
    color: <%= news_colors("off-white") %>;
  }
  .footer a:hover,
  .header a:hover {
    color: <%= news_colors("green") %>;
  }
}
@media (prefers-color-scheme: dark) and (max-width: 700px) {
  .footer,
  .header {
    background-color: <%= news_colors("dark-gray") %>;
  }
}
