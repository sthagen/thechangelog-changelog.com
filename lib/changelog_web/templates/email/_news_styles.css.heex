<style>
body {
  font-family: <%= news_fonts("sans") %> !important;
  width: 100%;
  color: <%= news_colors("dark-gray") %> !important;
  background-color: <%= news_colors("white") %> !important;
  margin: 0;
  padding: 0;
}

.hide-on-desktop {
  display: none !important;
}

.show-on-desktop {
  display: block !important;
}

@media (max-width: 700px) {
  .hide-on-mobile {
    display: none !important;
  }
  .show-on-mobile {
    display: block !important;
  }
  .last-of-type-on-mobile {
    margin-bottom: 0 !important;
  }
}
.last-of-type {
  margin-bottom: 0 !important;
}

.content {
  margin-bottom: 32px;
}
.content:last-of-type {
  margin-bottom: 0 !important;
}
.content h1,
.content h2,
.content h3,
.content h4 {
  color: <%= news_colors("black") %>;
}
.content h1 a,
.content h2 a,
.content h3 a,
.content h4 a {
  color: <%= news_colors("black") %>;
  font-weight: unset;
}
.content h1 a:hover,
